<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:name="com.example.practicanpi.DialogResponseFragment"
        android:id="@+id/fragment_dialog_response"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_dialog_response" />

    <fragment
        android:name="com.example.practicanpi.DialogInputFragment"
        android:id="@+id/fragment_dialog_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        tools:layout="@layout/fragment_dialog_input" />
</LinearLayout>